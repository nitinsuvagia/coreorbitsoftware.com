# ===========================================
# OFFICE MANAGEMENT SYSTEM - ENVIRONMENT VARS
# ===========================================

# Application
NODE_ENV=development
APP_NAME="Office Management System"
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# Master Database (PostgreSQL) - For Tenant Management
MASTER_DATABASE_URL=postgresql://postgres:password@localhost:5432/oms_master

# Redis (for caching & sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# SSO Configuration (SAML/OIDC)
SSO_ENABLED=false
SSO_ISSUER=https://your-company.okta.com
SSO_CLIENT_ID=your-client-id
SSO_CLIENT_SECRET=your-client-secret
SSO_CALLBACK_URL=http://localhost:4000/api/auth/sso/callback

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# AWS S3
AWS_S3_BUCKET=oms-uploads
AWS_S3_TENANT_BUCKET_PREFIX=oms-tenant

# AWS SQS
AWS_SQS_QUEUE_PREFIX=oms
AWS_SQS_REGION=us-east-1

# AWS SNS
AWS_SNS_TOPIC_PREFIX=oms

# AWS SES (Email)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=your-ses-smtp-user
SMTP_PASSWORD=your-ses-smtp-password
EMAIL_FROM=noreply@yourcompany.com

# Platform Email Configuration (for platform admin communications)
# These emails go through itsupport@omsystem.com
PLATFORM_SMTP_HOST=smtp.gmail.com
PLATFORM_SMTP_PORT=587
PLATFORM_SMTP_SECURE=true
PLATFORM_SMTP_USER=itsupport@omsystem.com
PLATFORM_SMTP_PASS=your-app-specific-password
PLATFORM_FROM_EMAIL=itsupport@omsystem.com
PLATFORM_FROM_NAME=OMS Platform Support

# Tenant Email Configuration (for tenant-specific communications)
# Default tenant email settings - can be overridden per tenant
TENANT_SMTP_HOST=smtp.gmail.com
TENANT_SMTP_PORT=587
TENANT_SMTP_SECURE=true
TENANT_SMTP_USER=noreply@omsystem.com
TENANT_SMTP_PASS=your-app-specific-password
TENANT_FROM_EMAIL=noreply@omsystem.com
TENANT_FROM_NAME=Office Management System

# Email Provider (smtp or ses)
EMAIL_PROVIDER=smtp

# Notification Service URL
NOTIFICATION_SERVICE_URL=http://notification-service:3006

# WebSocket
WS_PORT=4001

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key!

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Service Ports
GATEWAY_PORT=4000
TENANT_SERVICE_PORT=3000
AUTH_SERVICE_PORT=3001
EMPLOYEE_SERVICE_PORT=3002
ATTENDANCE_SERVICE_PORT=3003
PROJECT_SERVICE_PORT=3004
TASK_SERVICE_PORT=3005
RESOURCE_SERVICE_PORT=3006
CLIENT_SERVICE_PORT=3007
ASSET_SERVICE_PORT=3008
HR_SERVICE_PORT=3009
PAYROLL_SERVICE_PORT=3010
MEETING_SERVICE_PORT=3011
RECRUITMENT_SERVICE_PORT=3012
NOTIFICATION_SERVICE_PORT=3013
FILE_SERVICE_PORT=3014

# Feature Flags
FEATURE_RECRUITMENT=true
FEATURE_PAYROLL=true
FEATURE_ASSET_MANAGEMENT=true
FEATURE_CLIENT_PORTAL=true
