{
  "name": "@oms/tenant-db-manager",
  "version": "1.0.0",
  "description": "Dynamic tenant database connection manager for multi-tenant architecture",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "eslint-config-next": "16.1.1",
    "lru-cache": "^10.2.0",
    "nodemailer": "7.0.12"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@oms/database": "*",
    "@oms/shared-types": "*"
  }
}
