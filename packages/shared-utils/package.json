{
  "name": "@oms/shared-utils",
  "version": "1.0.0",
  "description": "Shared utility functions for Office Management System",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.0.0",
    "date-fns-tz": "^3.0.0",
    "eslint-config-next": "16.1.1",
    "nanoid": "^5.0.0",
    "nodemailer": "7.0.12",
    "slugify": "^1.6.6",
    "validator": "^13.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "@types/validator": "^13.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ]
}
