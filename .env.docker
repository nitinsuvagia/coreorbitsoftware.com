# ===========================================
# DOCKER DEVELOPMENT OVERRIDES
# ===========================================
# This file is used by docker-compose to override .env values
# Uses Docker service names for networking

# Docker Database Connection (use docker service names)
MASTER_DATABASE_URL=postgresql://postgres:password@postgres:5432/oms_master
DATABASE_URL=postgresql://postgres:password@postgres:5432/oms_master
REDIS_URL=redis://redis:6379
REDIS_HOST=redis

# Docker Service URLs (use docker service names)
AUTH_SERVICE_URL=http://auth-service:3001
EMPLOYEE_SERVICE_URL=http://employee-service:3002
ATTENDANCE_SERVICE_URL=http://attendance-service:3003
PROJECT_SERVICE_URL=http://project-service:3004
TASK_SERVICE_URL=http://task-service:3005
BILLING_SERVICE_URL=http://billing-service:3006
DOCUMENT_SERVICE_URL=http://document-service:3007
NOTIFICATION_SERVICE_URL=http://notification-service:3008
REPORT_SERVICE_URL=http://report-service:3009

# Tenant Database Configuration (docker service name)
TENANT_DB_HOST=postgres
TENANT_DB_PORT=5432
TENANT_DB_USER=postgres
TENANT_DB_PASSWORD=password
TENANT_DB_PREFIX=oms_tenant_

# AWS LocalStack (Docker service)
AWS_ENDPOINT=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# CORS (allow all for docker dev)
CORS_ORIGINS=*
